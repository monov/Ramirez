{
  "manifest_version": 3,
  "name": "Network Request Counter",
  "version": "1.0",
  "description": "Tracks the number of successfully completed network requests for the current tab.",
  "permissions": ["webRequest", "activeTab", "tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}
